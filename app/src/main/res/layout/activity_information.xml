<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:id="@+id/homelayout"
                                             android:layout_height="match_parent"
                                             android:layout_width="match_parent"
                                             android:background="@drawable/animate_gradient">


    <ImageView
            android:layout_width="0dp"
            android:layout_height="104dp"
            android:src="@drawable/oldman"

            app:layout_constraintStart_toStartOf="@+id/guideline_left"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right"
            android:id="@+id/imageView" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Nombres:"
            android:textColor="@color/black_text"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            app:layout_constraintStart_toStartOf="@+id/guideline_left"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginStart="8dp"
            android:id="@+id/textView"/>

    <TextView
            android:text="Apellidos:"
            android:textColor="@color/black_text"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/guideline_left"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginStart="8dp" android:id="@+id/textView7"
            android:layout_marginTop="20dp"/>
    <TextView
            android:text="Sexo:"
            android:textColor="@color/black_text"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/guideline_left"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:id="@+id/textView8"/>
    <TextView
            android:text="Fecha Nacimiento:"
            android:textColor="@color/black_text"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/guideline_left"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            android:layout_marginStart="8dp" android:id="@+id/textView6"
            android:layout_marginTop="20dp"/>
    <TextView
            android:text="DNI:"
            android:textColor="@color/black_text"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/guideline_left"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginStart="8dp" android:id="@+id/textView5"
            android:layout_marginTop="20dp"/>
    <TextView
            android:text="Edad:"
            android:textColor="@color/black_text"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/guideline_left"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginStart="8dp" android:id="@+id/textView4"
            android:layout_marginTop="20dp"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="24dp"
            android:id="@+id/guideline_left"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline_right" app:layout_constraintGuide_end="24dp"/>


    <TextView
            android:text="Dirección:"
            android:textColor="@color/black_text"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/guideline_left"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginStart="8dp" android:id="@+id/textView2"
            android:layout_marginTop="20dp"/>
    <TextView
            android:text="Teléfono:"
            android:textColor="@color/black_text"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/guideline_left"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginStart="8dp" android:id="@+id/textView3"
            android:layout_marginTop="20dp"/>
    <EditText
            android:textColor="@color/black_text"
            android:textSize="15dp"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            android:layout_marginStart="16dp" android:id="@+id/editText" android:layout_marginTop="12dp"
            android:inputType="date"/>


    <Button
            android:text="@string/cancel_placeholder"
            android:layout_width="323dp"
            android:layout_height="52dp"
            android:background="@drawable/btn_background"
            android:textColor="@color/login_form_detail"
            android:id="@+id/cancel_btn3"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right"
            app:layout_constraintStart_toStartOf="@+id/guideline_left" app:layout_constraintHorizontal_bias="0.2"
            android:layout_marginTop="88dp"/>


</android.support.constraint.ConstraintLayout>