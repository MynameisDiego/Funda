<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:id="@+id/homelayout"
                                             android:layout_height="match_parent"
                                             android:layout_width="match_parent"
                                             android:background="@drawable/animate_gradient">
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="24dp"
            android:id="@+id/guideline_left"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline_right" app:layout_constraintGuide_end="24dp"/>


    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="139dp"
            android:id="@+id/guideline_center1"/>

    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="631dp"
            android:id="@+id/guideline_final"/>

    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="276dp"
            android:id="@+id/guideline_center2"/>


    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="220dp"
            android:id="@+id/guideline_bar1"/>

    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="384dp"
            android:id="@+id/guideline_bar2"/>

    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="527dp"
            android:id="@+id/guideline_bar3"/>


    <ImageView
            android:layout_width="0dp"
            android:layout_height="104dp"
            android:src="@drawable/oldman"

            app:layout_constraintStart_toStartOf="@+id/guideline_left"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right"
            android:id="@+id/imageView" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/pastillas"

            android:id="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@id/txtNombre"
            app:layout_constraintStart_toEndOf="@+id/guideline_left"
            app:layout_constraintEnd_toStartOf="@+id/imageView3" android:layout_marginTop="68dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/calendar"
            android:id="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@id/txtNombre"
            app:layout_constraintStart_toStartOf="@+id/guideline_left"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right" android:layout_marginTop="70dp"/>

    <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/information"
            android:id="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@id/txtNombre"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right" android:layout_marginTop="70dp"
            app:layout_constraintHorizontal_bias="0.826"/>

    <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/glucosa"
            android:id="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@id/txtTratamiento"
            app:layout_constraintStart_toEndOf="@+id/guideline_left"
            app:layout_constraintEnd_toStartOf="@+id/imageView6" android:layout_marginTop="40dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/reporte"
            android:id="@+id/imageView6" android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/txtCalendario"
            app:layout_constraintStart_toStartOf="@+id/guideline_left"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right" android:layout_marginTop="40dp"/>

    <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/learn"
            android:id="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@id/txtInformation"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right" android:layout_marginTop="40dp"
            app:layout_constraintHorizontal_bias="0.826"/>


    <TextView
            android:id="@+id/txtTratamiento"
            android:layout_width="90dp"
            android:layout_height="21dp"
            android:textColor="@color/login_form_detail"
            android:text="Tratamiento"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/guideline_left"
            app:layout_constraintEnd_toStartOf="@+id/txtCalendario" app:layout_constraintHorizontal_bias="0.0"/>


    <TextView
            android:id="@+id/txtCalendario"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textColor="@color/login_form_detail"
            android:text="Cita Médica"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/guideline_left"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right"/>

    <TextView
            android:id="@+id/txtInformation"
            android:layout_width="98dp"
            android:layout_height="21dp"
            android:textColor="@color/login_form_detail"
            android:text="Mi Información"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/imageView4"
            app:layout_constraintStart_toEndOf="@+id/txtCalendario"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right" app:layout_constraintHorizontal_bias="0.9"/>

    <TextView
            android:id="@+id/txtGlucosa"
            android:layout_width="90dp"
            android:layout_height="21dp"
            android:textColor="@color/login_form_detail"
            android:text="Glucosa"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@+id/guideline_left"
            app:layout_constraintEnd_toStartOf="@+id/txtReporte"
            app:layout_constraintTop_toBottomOf="@id/imageView5" app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:id="@+id/txtReporte"
            android:layout_width="100dp"
            android:layout_height="21dp"
            android:textColor="@color/login_form_detail"
            android:text="Reportes"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@+id/guideline_left"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right"
            app:layout_constraintTop_toBottomOf="@id/imageView6"/>

    <TextView
            android:id="@+id/txtLearn"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textColor="@color/login_form_detail"
            android:text="Educando al paciente"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/txtReporte"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right"
            app:layout_constraintTop_toBottomOf="@id/imageView7"
            app:layout_constraintHorizontal_bias="0.829"/>

    <TextView
            android:id="@+id/txtNombre"
            android:layout_width="141dp"
            android:layout_height="21dp"
            android:textColor="@color/login_form_detail"
            android:text=""
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toStartOf="@+id/guideline_left"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right"/>


    <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/emergency"
            android:id="@+id/imageView8"
            app:layout_constraintStart_toStartOf="@+id/guideline_left"
            app:layout_constraintEnd_toStartOf="@+id/guideline_center1"
            app:layout_constraintTop_toBottomOf="@id/txtGlucosa" android:layout_marginTop="52dp"/>




</android.support.constraint.ConstraintLayout>